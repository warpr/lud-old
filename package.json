{
    "name": "lud",
    "version": "0.0.1",
    "description": "lûd - an opinionated browser based media player",
    "main": "lib/lûd.js",
    "scripts": {
        "flow": "flow",
        "flow:watch": "flow-watch",
        "install-flow-types": "flow-typed install",
        "precommit": "lint-staged",
        "test": "bin/test"
    },
    "lint-staged": {
        "*.js": [
            "import-sort --write",
            "prettier --write",
            "git add"
        ],
        "*.php": [
            "prettier --write",
            "git add"
        ],
        "bin/disc-length": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/search": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/sql": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/update": [
            "prettier --parser=php --write",
            "git add"
        ]
    },
    "author": "Kuno Woudt <kuno@frob.nl>",
    "license": "copyleft-next-0.3.1",
    "repository": "https://gitlab.com/kuno/lud.git",
    "devDependencies": {
        "@prettier/plugin-php": "^0.6.0",
        "chai": "^4.1.2",
        "flow": "^0.2.3",
        "flow-bin": "^0.74.0",
        "flow-typed": "^2.4.0",
        "flow-watch": "^1.1.3",
        "husky": "^0.14.3",
        "import-sort-cli": "^4.2.0",
        "import-sort-parser-babylon": "^4.2.0",
        "import-sort-style-module": "^4.2.0",
        "immutable-devtools": "^0.1.3",
        "lint-staged": "^7.2.2",
        "mocha": "^5.2.0",
        "prettier": "^1.14.2"
    },
    "dependencies": {
        "@material-ui/core": "^1.3.0",
        "@material/slider": "^0.36.0",
        "font-awesome": "^4.7.0",
        "immutable": "^3.8.2",
        "lodash": "^4.17.10",
        "lunr": "^2.2.1",
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "react-transition-group": "^2.3.1",
        "styled-components": "^3.3.3",
        "underscore.string": "^3.3.4"
    }
}
