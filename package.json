{
    "name": "lud",
    "version": "0.0.2",
    "description": "lûd - an opinionated browser based media player",
    "main": "lib/lûd.js",
    "scripts": {
        "flow": "flow",
        "flow:watch": "flow-watch",
        "live": "live-server --no-browser .",
        "sync:peach": "lsyncd -log all -nodaemon -rsync . peach:code/lud-sync",
        "install-flow-types": "flow-typed install",
        "precommit": "lint-staged",
        "test": "bin/test"
    },
    "lint-staged": {
        "*.js": [
            "import-sort --write",
            "prettier --write",
            "git add"
        ],
        "*.php": [
            "prettier --write",
            "git add"
        ],
        "bin/disc-length": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/lud": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/.sql-command": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/index-album": [
            "prettier --parser=php --write",
            "git add"
        ]
    },
    "author": "Kuno Woudt <kuno@frob.nl>",
    "license": "copyleft-next-0.3.1",
    "repository": "https://github.com/warpr/lud.git",
    "devDependencies": {
        "@prettier/plugin-php": "^0.10.2",
        "chai": "^4.2.0",
        "chai-http": "^4.2.1",
        "flow": "^0.2.3",
        "flow-bin": "^0.94.0",
        "flow-typed": "^2.5.1",
        "flow-watch": "^1.1.4",
        "husky": "^1.3.0",
        "immutable-devtools": "^0.1.4",
        "import-sort-cli": "^6.0.0",
        "import-sort-parser-babylon": "^6.0.0",
        "import-sort-style-module": "^6.0.0",
        "lint-staged": "^8.1.5",
        "mocha": "^6.0.2",
        "prettier": "^1.16.4"
    },
    "dependencies": {
        "@material-ui/core": "^3.9.2",
        "@material/slider": "^0.44.1",
        "@reactivex/rxjs": "^6.4.0",
        "abortcontroller-polyfill": "^1.2.7",
        "font-awesome": "^4.7.0",
        "immutable": "^4.0.0-rc.12",
        "knex": "^0.16.3",
        "live-server": "^1.2.1",
        "lodash": "^4.17.11",
        "lunr": "^2.3.6",
        "pm2": "^3.3.1",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-transition-group": "^2.6.0",
        "sqlite3": "^4.0.6",
        "styled-components": "^4.1.3",
        "ua-parser-js": "^0.7.19",
        "underscore.string": "^3.3.5",
        "wu": "^2.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
