{
    "name": "lud",
    "version": "0.0.2",
    "description": "lûd - an opinionated browser based media player",
    "main": "lib/lûd.js",
    "scripts": {
        "flow": "flow",
        "flow:watch": "flow-watch",
        "sync:peach": "lsyncd -log all -nodaemon -rsync . peach:code/lud-sync",
        "install-flow-types": "flow-typed install",
        "precommit": "lint-staged",
        "test": "bin/test"
    },
    "lint-staged": {
        "*.js": [
            "import-sort --write",
            "prettier --write",
            "git add"
        ],
        "*.php": [
            "prettier --write",
            "git add"
        ],
        "bin/disc-length": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/lud": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/.sql-command": [
            "prettier --parser=php --write",
            "git add"
        ],
        "bin/index-album": [
            "prettier --parser=php --write",
            "git add"
        ]
    },
    "author": "Kuno Woudt <kuno@frob.nl>",
    "license": "copyleft-next-0.3.1",
    "repository": "https://github.com/warpr/lud.git",
    "devDependencies": {
        "@prettier/plugin-php": "^0.9.0",
        "chai": "^4.2.0",
        "flow": "^0.2.3",
        "flow-bin": "^0.89.0",
        "flow-typed": "^2.4.0",
        "flow-watch": "^1.1.4",
        "husky": "^1.3.0",
        "immutable-devtools": "^0.1.3",
        "import-sort-cli": "^4.2.0",
        "import-sort-parser-babylon": "^4.2.0",
        "import-sort-style-module": "^4.2.0",
        "lint-staged": "^8.1.0",
        "mocha": "^5.2.0",
        "prettier": "^1.15.3"
    },
    "dependencies": {
        "@material-ui/core": "^3.6.2",
        "@material/slider": "^0.42.1",
        "font-awesome": "^4.7.0",
        "immutable": "^3.8.2",
        "live-server": "^1.2.1",
        "lodash": "^4.17.11",
        "lunr": "^2.3.5",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "react-transition-group": "^2.5.2",
        "styled-components": "^4.1.3",
        "@reactivex/rxjs": "^6.3.3",
        "abortcontroller-polyfill": "^1.1.9",
        "underscore.string": "^3.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
